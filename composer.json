{
    "name": "gabrieldagama/randombeerapp",
    "description": "RandomBeerApp",
    "keywords": ["RandomBeerApp"],
    "homepage": "https://github.com/gabrieldagama/RandomBeerApp",
    "license": "MIT",
    "authors": [
        {
            "name": "Gabriel da Gama",
            "email": "gabriel@gabrielgama.com.br"
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "slim/slim": "^3.1",
        "slim/php-view": "^2.0",
        "monolog/monolog": "^1.17",
        "firebase/php-jwt": "^5.0",
        "tuupola/slim-basic-auth": "^3.2",
        "tuupola/slim-jwt-auth": "^3.1",
        "mongodb/mongodb": "1.3.2"
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8 < 6.0"
    },
    "autoload": {
        "psr-4": {
            "RandomBeerApp\\": "src/RandomBeerApp"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "process-timeout" : 0
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "phpunit"
    }

}
